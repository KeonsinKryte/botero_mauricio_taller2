{{#each products}}
<article class="product">
    <a href="/store/?product__name={{product__name}}">
        <img class="product__cover" src="{{product__imgCover}}" alt="Album cover">
        <img class="product__LP" src="{{product__imgLP}}" alt="Album LP">
        <section class="product__info">
            <h5 class="productname" data-productname="{{product__name}}">{{product__name}}</h5>
            <h2 class="productartist" data-productartist="{{product__artist}}">{{product__artist}}</h2>
            <h6 class="productprice" data-productprice="{{product__price}}">{{product__price}}</h6>
        </section>
    </a>
    <button class="product__button">Add to cart</button>
</article>
{{/each}}